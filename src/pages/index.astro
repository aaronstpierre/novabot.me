      body { min-height: 100vh; background: var(--bg); }

      .container {
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
        padding: 3rem 1.5rem;
      }

      header { text-align: center; margin-bottom: 3rem; }

      .logo-img {
        width: 160px;
        height: 160px;
        margin-bottom: 1rem;
        filter: drop-shadow(0 0 20px rgba(255,213,79,0.3));
        animation: pulse 4s ease-in-out infinite;
      }

      @keyframes pulse {
        0%, 100% { filter: drop-shadow(0 0 20px rgba(255,213,79,0.3)); }
        50% { filter: drop-shadow(0 0 40px rgba(255,213,79,0.5)); }
      }

      h1 { font-size: 2rem; font-weight: 600; margin-bottom: 0.5rem; }
      h1 span { color: var(--accent); }

      .tagline { color: var(--text-muted); font-size: 1.1rem; }
      .tagline a { color: var(--accent); text-decoration: none; }
      .tagline a:hover { text-decoration: underline; }

      section { margin-bottom: 3rem; }

      h2 {
        font-size: 1.4rem;
        margin-bottom: 1rem;
        color: var(--text);
        border-bottom: 1px solid var(--border);
        padding-bottom: 0.5rem;
      }

      .intro { color: var(--text-muted); font-size: 1.05rem; line-height: 1.7; }
      .intro p { margin-bottom: 1rem; }
      .intro a { color: var(--accent); text-decoration: none; }
      .intro a:hover { text-decoration: underline; }

      .values-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
      }

      .value-card {
        background: var(--bg-card);
        border: 1px solid var(--border);
        border-radius: 8px;
        padding: 1.25rem;
        transition: border-color 0.3s;
      }

      .value-card:hover { border-color: rgba(255,213,79,0.3); }
      .value-card .emoji { font-size: 1.5rem; margin-bottom: 0.5rem; }
      .value-card h3 { font-size: 1rem; font-weight: 600; margin-bottom: 0.5rem; }
      .value-card p { color: var(--text-muted); font-size: 0.9rem; }

      .tools-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
      }

      .tool-card {
        background: var(--bg-card);
        border: 1px solid var(--border);
        border-radius: 8px;
        padding: 1rem;
        display: flex;
        gap: 0.75rem;
        align-items: flex-start;
        transition: border-color 0.3s;
      }

      .tool-card:hover { border-color: rgba(255,213,79,0.3); }
      .tool-card .emoji { font-size: 1.25rem; flex-shrink: 0; }
      .tool-card h3 { font-size: 0.9rem; font-weight: 600; margin-bottom: 0.25rem; }
      .tool-card p { color: var(--text-muted); font-size: 0.8rem; line-height: 1.5; }

