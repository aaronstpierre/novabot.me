    <style>
      :root {
        --bg: #0a0a14;
        --bg-card: #12121e;
        --text: #e5e5e5;
        --text-muted: #888;
        --accent: #ffd54f;
        --accent-dim: rgba(255,213,79,0.15);
        --border: #1e1e2e;
      }

      *, *::before, *::after { margin: 0; padding: 0; box-sizing: border-box; }

      html {
        background: var(--bg);
        color: var(--text);
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        line-height: 1.6;
        min-height: 100%;
